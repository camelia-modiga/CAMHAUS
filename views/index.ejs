            <table border="1" align="center">
                <tr>
                    <th>Id</th>
                    <th>Produs</th>
                    <th>Preț (lei)</th>
                </tr>

                <%
      if(listResults.length!=0){
      var i=1;
      listResults.forEach(function(data){
      %>
                    <tr>
                        <td>
                            <%=i; %>
                        </td>
                        <td>
                            <%=data.nume_produs %>
                        </td>
                        <td>
                            <%=data.pret_produs %>
                        </td>
                        <td>
                            <form action="/adaugare-cos" method="post">
                                <button type="submit">Adaugă în coș</button>
                                <input type="hidden" name="id" value=<%=i%>>
                                <input type="hidden" name="prod" value=<%=data.nume_produs%>>

                            </form>
                        </td>
                    </tr>
                    <%  i++; }) %>
                        <% } else{ %>
                            <tr>
                                <td colspan="7">No Data Found</td>
                            </tr>
                            <% } %>
            </table>
            <br><br>
